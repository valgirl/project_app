<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/logg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:paddingLeft="10dp"
        android:text="@string/coach_name"
        android:textColor="@color/White"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/logg"
        android:layout_alignBottom="@+id/logg"
        android:layout_toRightOf="@+id/logg"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/add_coach_ok_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coach_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/ok" />

</RelativeLayout>