<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="0dp" >

   <Button
       android:id="@+id/create_user"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/login"
       android:layout_alignRight="@+id/login"
       android:layout_below="@+id/login"
       android:layout_marginTop="5dp"
       android:background="@color/CornflowerBlue"
       android:height="30dp"
       android:paddingLeft="0dp"
       android:paddingTop="0dp"
       android:text="@string/create"
       android:textColor="@color/Black"
       android:textColorHint="@color/Black"
       android:textSize="15sp"
       android:textStyle="italic"
       android:typeface="serif" />

          <Button
              android:id="@+id/speed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/beep"
              android:layout_alignTop="@+id/jump"
              android:background="@color/CornflowerBlue"
              android:drawableTop="@drawable/speed"
              android:text="@string/speed" />

          <Button
              android:id="@+id/beep"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/run"
              android:layout_alignBottom="@+id/run"
              android:layout_alignRight="@+id/create_user"
              android:layout_marginRight="25dp"
              android:background="@color/CornflowerBlue"
              android:drawableTop="@drawable/shuttle"
              android:text="@string/beep" />

          <Button
              android:id="@+id/jump"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/run"
              android:layout_alignRight="@+id/run"
              android:layout_below="@+id/run"
              android:layout_marginTop="39dp"
              android:background="@color/CornflowerBlue"
              android:drawableTop="@drawable/jump1"
              android:text="@string/jump" />

          <Button
              android:id="@+id/logout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="18dp"
              android:background="@color/CornflowerBlue"
              android:height="30dp"
              android:text="@string/logout"
              android:textSize="15sp"
              android:textStyle="italic"
              android:typeface="serif"
              android:width="60dp" />

          <Button
              android:id="@+id/login"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="5dp"
              android:background="@color/CornflowerBlue"
              android:height="30dp"
              android:paddingLeft="0dp"
              android:text="@string/login"
              android:textColor="@color/Black"
              android:textColorHint="@color/Black"
              android:textSize="15sp"
              android:textStyle="italic"
              android:typeface="serif" />

          <Button
              android:id="@+id/run"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/create_user"
              android:layout_marginRight="32dp"
              android:layout_marginTop="60dp"
              android:layout_toLeftOf="@+id/beep"
              android:background="@color/CornflowerBlue"
              android:drawableTop="@drawable/running"
              android:text="@string/record" />

          <TextView
              android:id="@+id/Logged_in_person"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/create_user"
              android:layout_alignRight="@+id/beep"
              android:layout_below="@+id/create_user"
              android:layout_marginTop="15dp"
              android:background="@color/Black"
              android:height="30dp"
              android:textColor="@color/CornflowerBlue"
              android:textSize="20sp"
              android:textStyle="bold" />
    
</RelativeLayout>
