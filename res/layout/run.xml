<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom" >
    
<fragment 
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.SupportMapFragment"/>

<Button
    android:id="@+id/rec"
    android:layout_width="120dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="19dp"
    android:background="@drawable/rec"
    android:height="50dp"
    android:width="80dp" />

<TextView
    android:id="@+id/distance_run_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="14dp"
    android:layout_marginTop="28dp"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:width="70dp" />

<TextView
    android:id="@+id/steps_per_min_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/pace_txt"
    android:layout_below="@+id/pace_txt"
    android:layout_marginTop="18dp"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:width="70dp" />

<TextView
    android:id="@+id/time_txt_run"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/distance_run_txt"
    android:layout_below="@+id/distance_run_txt"
    android:layout_marginTop="19dp"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:width="70dp" />

<TextView
    android:id="@+id/pace_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/time_txt_run"
    android:layout_below="@+id/time_txt_run"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:width="70dp" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/time_txt_run"
    android:layout_toLeftOf="@+id/distance_run_txt"
    android:text="@string/dist"
    android:textColor="@color/DarkBlue"
    android:textSize="15sp" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/time_txt_run"
    android:layout_alignBottom="@+id/time_txt_run"
    android:layout_alignRight="@+id/textView1"
    android:text="@string/tim"
    android:textColor="@color/DarkBlue"
    android:textSize="15sp" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/pace_txt"
    android:layout_toLeftOf="@+id/pace_txt"
    android:text="@string/pace"
    android:textColor="@color/DarkBlue"
    android:textSize="15sp" />

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/steps_per_min_txt"
    android:layout_toLeftOf="@+id/steps_per_min_txt"
    android:text="@string/steps"
    android:textColor="@color/DarkBlue"
    android:textSize="15sp" />

</RelativeLayout>